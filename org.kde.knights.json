{
    "app-id": "org.kde.knights",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.9",
    "sdk": "org.kde.Sdk",
    "command": "knights",
    "rename-icon": "knights",
    "finish-args": [
        "--device=dri",
        "--share=ipc",
        "--share=network",
        "--socket=fallback-x11",
        "--socket=pulseaudio",
        "--socket=wayland"
    ],
    "cleanup": [
        "/share/gnuchess",
        "/share/info",
        "/share/man",
        "/include"
    ],
    "modules": [
        {
            "name": "gnuchess",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://ftpmirror.gnu.org/chess/gnuchess-6.2.11.tar.gz",
                    "sha256": "d81140eea5c69d14b0cfb63816d4b4c9e18fba51f5267de5b1539f468939e9bd",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 1206,
                        "stable-only": true,
                        "url-template": "https://ftpmirror.gnu.org/chess/gnuchess-$version.tar.gz"
                    }
                }
            ]
        },
        {
            "name": "libkdegames",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/25.08.0/src/libkdegames-25.08.0.tar.xz",
                    "sha256": "15579343d5b06608115e8e95473b80bc91de8841b1a79584f5615a91fe57e2f7",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 8763,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/release-service/$version/src/libkdegames-$version.tar.xz"
                    }
                }
            ]
        },
        {
            "name": "libplasma",
            "config-opts": [
                "-DBUILD_TESTING=OFF"
            ],
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/plasma/6.4.4/libplasma-6.4.4.tar.xz",
                    "sha256": "ab0f4b426829821e0abf479052f326a5ce01c3b604e890c9f79949c3eb5fdebe",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 8761,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/plasma/$version/libplasma-$version.tar.xz"
                    }
                }
            ]
        },
        {
            "name": "knights",
            "buildsystem": "cmake-ninja",
            "post-install": [
                "install -Dm644 org.kde.knights.svg ${FLATPAK_DEST}/share/icons/hicolor/scalable/apps/org.kde.knights.svg"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/25.08.0/src/knights-25.08.0.tar.xz",
                    "sha256": "e587ee6e91a4ae803287e2b4c443cd63b04f5912a3c1ab14f4345c543bd7256e",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 8763,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/release-service/$version/src/knights-$version.tar.xz"
                    }
                },
                {
                    "type": "file",
                    "url": "https://apps.kde.org/app-icons/org.kde.knights.svg",
                    "sha256": "e75d1b7f7b7b5d449f2058e63d0ca5f52e3593e0dc984f875e2bebde3e194b85"
                }
            ]
        }
