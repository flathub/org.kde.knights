{
    "app-id": "org.kde.knights",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.6",
    "sdk": "org.kde.Sdk",
    "command": "knights",
    "rename-icon": "knights",
    "finish-args": [
        "--device=dri",
        "--share=ipc",
        "--share=network",
        "--socket=fallback-x11",
        "--socket=pulseaudio",
        "--socket=wayland"
    ],
    "cleanup": [
        "/share/gnuchess",
        "/share/info",
        "/share/man",
        "/include"
    ],
    "modules": [
        {
            "name": "gnuchess",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://ftpmirror.gnu.org/chess/gnuchess-6.2.9.tar.gz",
                    "sha256": "ddfcc20bdd756900a9ab6c42c7daf90a2893bf7f19ce347420ce36baebc41890",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 1206,
                        "stable-only": true,
                        "url-template": "https://ftpmirror.gnu.org/chess/gnuchess-$version.tar.gz"
                    }
                }
            ]
        },
        {
            "name": "libkdegames",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/24.02.2/src/libkdegames-24.02.2.tar.xz",
                    "sha256": "3c6bf773670e4509bbc71604bf0a14910d076434326a15756d3c47b1f5ae7e19",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 8763,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/release-service/$version/src/libkdegames-$version.tar.xz"
                    }
                }
            ]
        },
        {
            "name": "libplasma",
            "config-opts": [
                "-DBUILD_TESTING=OFF"
            ],
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/plasma/6.0.5/libplasma-6.0.5.tar.xz",
                    "sha256": "d35765c039901e739b014ff92640c6cd4a4d8524c26fe4d00bd134d16ab0ccd2",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 8761,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/plasma/$version/libplasma-$version.tar.xz"
                    }
                }
            ]
        },
        {
            "name": "knights",
            "buildsystem": "cmake-ninja",
            "post-install": [
                "install -Dm644 org.kde.knights.svg ${FLATPAK_DEST}/share/icons/hicolor/scalable/apps/org.kde.knights.svg"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/24.02.2/src/knights-24.02.2.tar.xz",
                    "sha256": "0fec83c862b48d890fdfdbe04ef337e68855d8dc52be8ba1b99d30b16f19e0fe",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 8763,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/release-service/$version/src/knights-$version.tar.xz"
                    }
                },
                {
                    "type": "file",
                    "url": "https://apps.kde.org/app-icons/org.kde.knights.svg",
                    "sha256": "e75d1b7f7b7b5d449f2058e63d0ca5f52e3593e0dc984f875e2bebde3e194b85"
                }
            ]
        }
    ]
}
