{
    "app-id": "org.kde.knights",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.7",
    "sdk": "org.kde.Sdk",
    "command": "knights",
    "rename-icon": "knights",
    "finish-args": [
        "--device=dri",
        "--share=ipc",
        "--share=network",
        "--socket=fallback-x11",
        "--socket=pulseaudio",
        "--socket=wayland"
    ],
    "cleanup": [
        "/share/gnuchess",
        "/share/info",
        "/share/man",
        "/include"
    ],
    "modules": [
        {
            "name": "gnuchess",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://ftpmirror.gnu.org/chess/gnuchess-6.2.9.tar.gz",
                    "sha256": "ddfcc20bdd756900a9ab6c42c7daf90a2893bf7f19ce347420ce36baebc41890",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 1206,
                        "stable-only": true,
                        "url-template": "https://ftpmirror.gnu.org/chess/gnuchess-$version.tar.gz"
                    }
                }
            ]
        },
        {
            "name": "libkdegames",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/24.08.1/src/libkdegames-24.08.1.tar.xz",
                    "sha256": "48b2254a6cdf38744b6ef40ff47e4430b92633bb2003030aed8edfd497414fc2",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 8763,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/release-service/$version/src/libkdegames-$version.tar.xz"
                    }
                }
            ]
        },
        {
            "name": "libplasma",
            "config-opts": [
                "-DBUILD_TESTING=OFF"
            ],
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/plasma/6.2.0/libplasma-6.2.0.tar.xz",
                    "sha256": "756a1cb01513ca04906a079cc2802dca6f4f610f319261919b3d5e25bd4fda98",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 8761,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/plasma/$version/libplasma-$version.tar.xz"
                    }
                }
            ]
        },
        {
            "name": "knights",
            "buildsystem": "cmake-ninja",
            "post-install": [
                "install -Dm644 org.kde.knights.svg ${FLATPAK_DEST}/share/icons/hicolor/scalable/apps/org.kde.knights.svg"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/24.08.1/src/knights-24.08.1.tar.xz",
                    "sha256": "93c36ce1fd064c39965545dc936d5083cabbd4e75c22aca75b8697a49fa61754",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 8763,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/release-service/$version/src/knights-$version.tar.xz"
                    }
