{
    "app-id": "org.kde.knights",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.9",
    "sdk": "org.kde.Sdk",
    "command": "knights",
    "rename-icon": "knights",
    "finish-args": [
        "--device=dri",
        "--share=ipc",
        "--share=network",
        "--socket=fallback-x11",
        "--socket=pulseaudio",
        "--socket=wayland"
    ],
    "cleanup": [
        "/share/gnuchess",
        "/share/info",
        "/share/man",
        "/include"
    ],
    "modules": [
        {
            "name": "gnuchess",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://ftpmirror.gnu.org/chess/gnuchess-6.3.0.tar.gz",
                    "sha256": "0b37bec2098c2ad695b7443e5d7944dc6dc8284f8d01fcc30bdb94dd033ca23a",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 1206,
                        "stable-only": true,
                        "url-template": "https://ftpmirror.gnu.org/chess/gnuchess-$version.tar.gz"
                    }
                }
            ]
        },
        {
            "name": "libkdegames",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/25.08.3/src/libkdegames-25.08.3.tar.xz",
                    "sha256": "46f305677fb37978c6b47bd17ab6553b572151a63299bb7b8dc718d37fb448a4",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 8763,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/release-service/$version/src/libkdegames-$version.tar.xz"
                    }
                }
            ]
        },
        {
            "name": "libplasma",
            "config-opts": [
                "-DBUILD_TESTING=OFF"
            ],
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/plasma/6.5.2/libplasma-6.5.2.tar.xz",
                    "sha256": "194fcfd972b7c0882e88528603d8aef69aa0a5ef199730bf5b1e33022f21e6e1",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 8761,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/plasma/$version/libplasma-$version.tar.xz"
                    }
                }
            ]
        },
        {
            "name": "knights",
            "buildsystem": "cmake-ninja",
            "post-install": [
                "install -Dm644 org.kde.knights.svg ${FLATPAK_DEST}/share/icons/hicolor/scalable/apps/org.kde.knights.svg"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/25.08.3/src/knights-25.08.3.tar.xz",
                    "sha256": "ca089b2530ddad1e825695a05709c68baa703b996eeb5863ad269b637d11283d",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 8763,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/release-service/$version/src/knights-$version.tar.xz"
                    }
                },
                {
                    "type": "file",
                    "url": "https://apps.kde.org/app-icons/org.kde.knights.svg",
                    "sha256": "e75d1b7f7b7b5d449f2058e63d0ca5f52e3593e0dc984f875e2bebde3e194b85"
                }
            ]
        }
    ]
}
